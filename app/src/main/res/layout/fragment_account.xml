<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.fragments.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/header_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_section_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/header_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/primaryGreen"
                tools:ignore="ContentDescription" />
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_height"
                android:id="@+id/toolbar"
                android:elevation="4dp">
                <com.example.yshopping.utils.MSPTextViewRegular
                    android:id="@+id/toolbar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/toolbar_title_text_size"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/toolbar_margin_top"
                    android:layout_marginLeft="@dimen/cardview_content_margin"
                    android:layout_marginRight="@dimen/cardview_content_margin"
                    android:text="My Account"
                    tools:ignore="HardcodedText" />
            </androidx.appcompat.widget.Toolbar>
            <com.example.yshopping.utils.MSPTextViewLight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/header_title_hello"
                android:layout_marginTop="@dimen/hello_text_top_margin"
                android:layout_marginLeft="@dimen/cardview_content_margin"
                android:layout_marginRight="@dimen/cardview_content_margin"
                android:text="Hello,"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                tools:ignore="HardcodedText" />
            <com.example.yshopping.utils.MSPTextViewBold
                android:id="@+id/header_title_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:layout_marginLeft="@dimen/cardview_content_margin"
                android:layout_marginRight="@dimen/cardview_content_margin"
                android:layout_marginTop="@dimen/name_text_top_margin"
                android:textColor="@color/white"
                android:textSize="@dimen/header_text_size"
                tools:ignore="HardcodedText">
            </com.example.yshopping.utils.MSPTextViewBold>
            <ImageView
                android:id="@+id/profile_image"
                android:background="@drawable/round_profile_outline"
                android:layout_width="@dimen/profile_image_width"
                android:layout_height="@dimen/profile_image_height"
                android:layout_marginLeft="@dimen/cardview_content_margin"
                android:layout_marginRight="@dimen/cardview_content_margin"
                android:layout_marginTop="@dimen/profile_image_top_margin"
                android:layout_gravity="end"
                android:src="@drawable/profile_image_placeholder"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                tools:ignore="ContentDescription"
                tools:targetApi="s" />
        </FrameLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/content_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="@dimen/content_layout_padding_top">

                <com.example.yshopping.utils.MSPTextViewRegular
                    android:id="@+id/orders_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_content_margin"
                    android:layout_marginRight="@dimen/settings_content_margin"
                    android:background="@drawable/settings_text_border"
                    android:padding="@dimen/settings_text_padding"
                    android:text="Order History"
                    android:textSize="@dimen/text_size_medium"
                    tools:ignore="HardcodedText">
                </com.example.yshopping.utils.MSPTextViewRegular>

                <com.example.yshopping.utils.MSPTextViewRegular
                    android:id="@+id/details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/orders_title"
                    android:layout_marginLeft="@dimen/settings_content_margin"
                    android:layout_marginRight="@dimen/settings_content_margin"
                    android:background="@drawable/settings_text_border"
                    android:padding="@dimen/settings_text_padding"
                    android:text="Personal Details"
                    android:textSize="@dimen/text_size_medium"
                    tools:ignore="HardcodedText">
                </com.example.yshopping.utils.MSPTextViewRegular>
                <com.example.yshopping.utils.MSPTextViewRegular
                    android:id="@+id/addresses_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_content_margin"
                    android:layout_marginRight="@dimen/settings_content_margin"
                    android:background="@drawable/settings_text_border"
                    android:padding="@dimen/settings_text_padding"
                    android:layout_below="@+id/details_title"
                    android:text="Saved Addresses"
                    android:textSize="@dimen/text_size_medium"
                    tools:ignore="HardcodedText">
                </com.example.yshopping.utils.MSPTextViewRegular>
                <com.example.yshopping.utils.MSPTextViewRegular
                    android:id="@+id/logout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/settings_content_margin"
                    android:layout_marginRight="@dimen/settings_content_margin"
                    android:background="@drawable/settings_text_border"
                    android:padding="@dimen/settings_text_padding"
                    android:layout_below="@+id/addresses_title"
                    android:text="Log Out"
                    android:textColor="@color/red_700"
                    android:textSize="@dimen/text_size_medium"
                    tools:ignore="HardcodedText">
                </com.example.yshopping.utils.MSPTextViewRegular>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>